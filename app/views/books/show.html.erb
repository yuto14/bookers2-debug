<div class="row">
	<div class="col-xs-3">

		<h2>User info</h2>
		<%= render 'users/profile', user: @user %>

		<h2>New book</h2>
		<%= render 'books/newform', book: @book1 %>

	</div>

	<div class="col-xs-9">
		<h2>Book detail</h2>

		<table class="table">
				<tr>
					<td>
						<%= link_to (@book.user) do %>
						<%= attachment_image_tag(@book.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %><br>
						<%= @book.user.name %>
						<% end %>
					</td>
					<td><%= link_to @book.title, @book %></td>
					<td><%= @book.body %></td>

					<% if @book.user_id == current_user.id %>
					<td><%= link_to "Edit",edit_book_path(@book), class: "btn-sm btn-success edit_book_#{@book.id}" %></td>
					<td><%= link_to "Destroy",@book, method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{@book.id}" %></td>
					<% end %>
					<% if @book.favorited_by?(current_user) %>
					    <td><%= link_to book_favorites_path(@book),method: :delete do %>
						<i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
						<% end %>
						<%= @book.favorites.count %></td>
					<% else %>
					    <td><%= link_to book_favorites_path(@book), method: :post do %>
						<i class="fa fa-heart-o" aria-hidden="true"></i>
						<% end %>
						<%= @book.favorites.count %></td>
					<% end %>
					<td>コメント数：<%= @book.book_comments.count %></td>
				</tr>
				<% @book.book_comments.each do |book_comments| %>
				<tr>
				      <td>
						<%= link_to (book_comments.user) do %>
						<%= attachment_image_tag(book_comments.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %>
						<% end %>
						<%= book_comments.comment %>
						<% if book_comments.user == current_user %>
						<%= link_to "Destroy", book_book_comment_path(book_comments.book, book_comments),method: :delete, class: "btn-sm btn-danger" %>
						<% end %>
						<br>
						<%= book_comments.user.name %>
					  </td>
				</tr>
				<% end %>
			</table>

			<%= form_for [@book, @book_comment] do |f| %>
			  <%= f.text_area :comment, class:"col-xs-9" %>
			  <%= f.submit "送信" %>
			<% end %>

	</div>
</div>

