<%= form_for(book) do |f| %>
  	<% if book.errors.any? %>
		<% book.errors.full_messages.each do |message| %>
		<p>error</p>
		<%= message %>
		<% end %>
	<% end %>

	<div class="field row">
		<%= f.label :title %>
		<%= f.text_field :title, class: "col-xs-12 book_title" %>
	</div>

	<div class="field row">
		<%= f.label :body %> <!-- ここを変更 -->
		<%= f.text_area :body, class: "col-xs-12 book_body" %>
	</div>

	<div class="actions row">
		<%= f.submit class: "btn btn-primary col-xs-12" %>
	</div>
<% end %>