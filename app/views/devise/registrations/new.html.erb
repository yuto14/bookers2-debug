<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <!--name表示の追加-->
  <div class="field">
    <%= f.label :name %><br/>
    <%= f.text_field :name, autofocus: true, class: "name" %>
  </div>
  <!--name表示の追加-->

  <div class="field">
    <%= f.label :email %><br/>
    <%= f.email_field :email, autofocus: true, class: "email" %>
  </div>

  <!--住所入力フォーム-->
  <div class="field">
    <%= f.label :Postal_code %><br/>
    <%= f.text_field :postal_code, autofocus: true, class: "postal_code", id: "address_zipcode"  %>
  </div>

  <div class="field">
    <%= f.label :Prefecture_code %><br/>
  <!--都道府県の選択タグ＜％＝ f.collection_select プロパティ名, オブジェクトの配列, value属性の項目, テキストの項目 [, オプション] %>-->
    <%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :name, :name, class: "address" %>
  </div>

  <div class="field">
    <%= f.label :City %><br/>
    <%= f.text_field :city, autofocus: true, class: "address", id: "address_city" %>
  </div>

  <div class="field">
    <%= f.label :Street %><br/>
    <%= f.text_field :street, autofocus: true, class: "address", id: "address_street" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "password" %>
  </div>
<!--ここまで住所入力フォーム-->

<!--パスワード確認入力フォーム-->
  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "password_confirm" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up",class: "btn btn-success" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
